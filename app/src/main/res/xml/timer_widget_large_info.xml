<?xml version="1.0" encoding="utf-8"?>
<!-- 4x4 대형 타이머 위젯 -->
<appwidget-provider xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="250dp"
    android:minHeight="250dp"
    android:targetCellWidth="4"
    android:targetCellHeight="4"
    android:minResizeWidth="180dp"
    android:minResizeHeight="180dp"
    android:maxResizeWidth="400dp"
    android:maxResizeHeight="400dp"
    android:resizeMode="horizontal|vertical"
    android:widgetCategory="home_screen"
    android:initialLayout="@layout/widget_timer_large_initial"
    android:previewLayout="@layout/widget_timer_large_initial"
    android:description="@string/widget_timer_large_description"
    android:updatePeriodMillis="60000" />
